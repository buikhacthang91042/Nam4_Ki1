package utils;
import jakarta.persistence.EntityManager;
import jakarta.persistence.EntityManagerFactory;
import jakarta.persistence.Persistence;

public class EntityManagerFactoryUtil {
	private EntityManagerFactory entityManageFactory;
	private EntityManager entityManager;

	public EntityManagerFactoryUtil() {
	    try {
	        entityManageFactory = Persistence.createEntityManagerFactory("tintuc");
	        entityManager = entityManageFactory.createEntityManager();
	        System.out.println("EntityManagerFactory và EntityManager đã được khởi tạo thành công.");
	    } catch (Exception e) {
	        System.out.println("Lỗi khởi tạo EntityManagerFactory: " + e.getMessage());
	        e.printStackTrace();
	    }
	}

	
	public EntityManager getEnManager() {
		return entityManager;
	}

	public void close() {
		entityManager.close();
		entityManageFactory.close();
	}

}
