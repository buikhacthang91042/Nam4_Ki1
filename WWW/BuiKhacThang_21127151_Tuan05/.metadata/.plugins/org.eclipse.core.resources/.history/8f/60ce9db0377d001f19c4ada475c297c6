import jakarta.persistence.EntityManager;
import jakarta.persistence.EntityTransaction;

import models.NhaCungCap;
import utils.EntityManagerFactoryUtil;

public class Main {
    public static void main(String[] args) {
        // Tạo một instance của EntityManagerFactoryUtil
        EntityManagerFactoryUtil entityManagerFactoryUtil = new EntityManagerFactoryUtil();
        EntityManager entityManager = entityManagerFactoryUtil.getEnManager();

        // Bắt đầu giao dịch
        EntityTransaction transaction = entityManager.getTransaction();
        transaction.begin();

        // Tạo đối tượng NhaCungCap mới (để test)
        NhaCungCap nhaCungCap = new NhaCungCap();
        nhaCungCap.setTenNhaCungCap("Test Supplier");
        nhaCungCap.setDiaChi("123 Test Street");
        nhaCungCap.setSoDienThoai("0123456789");

        // Lưu vào cơ sở dữ liệu
        entityManager.persist(nhaCungCap);

        // Commit transaction
        transaction.commit();

        // Đóng EntityManager
        entityManager.close();
        entityManagerFactoryUtil.close();
    }
}
